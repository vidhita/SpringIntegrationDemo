<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:int="http://www.springframework.org/schema/integration"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/integration http://www.springframework.org/schema/integration/spring-integration.xsd
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

        <!-- EndPoint -->
    <int:gateway service-interface="com.vidhita.integration.CustomGateway" default-request-channel="inputChannel">
        <int:method name="print"/>
    </int:gateway>
    
    <!-- Channel -->
    <int:channel id="inputChannel"/>
    <int:channel id="outputChannel"/>

    <!-- EndPoint -->
    <int:service-activator ref="printService" input-channel="inputChannel" method="print"/>

    <!-- Spring Bean -->
    <bean id="printService" class="com.vidhita.integration.PrintService" />

    <!-- Spring Bean -->
    <bean id="reverseService" class="com.vidhita.integration.ReverseService" />

</beans>